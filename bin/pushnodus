#! /bin/bash

NODUSWEB=/users/public_html/detcharsummary
RUN_DIRECTORY=$HOME/public_html/summary/

TODAY=`date +%Y%m%d`
YESTERDAY=`date --date='yesterday' +%Y%m%d`

######################################################################################
# Make absoulute references relative

cd ${RUN_DIRECTORY}/day

# Loop over days
for d0 in */ ; do
  if [[ "$d0" == ${TODAY}"/" || $d0 == ${YESTERDAY}"/" ]]; then 
    cd $d0
    count=`ls -1 *.html 2>/dev/null | wc -l`
    if [ $count != 0 ]; then
      sed -i -- 's*<base href="/~max.isi/summary/" />*<base href="../.." />*g' *.html
    fi
    # Loop over tabs
    for d1 in */ ; do
      if [ -d "$d1" ]; then
        cd $d1
        count=`ls -1 *.html 2>/dev/null | wc -l`
        if [ $count != 0 ]; then
          sed -i -- 's*<base href="/~max.isi/summary/" />*<base href="../../.." />*g' *.html
        fi
        # Loop over sub-tabs
        for d2 in */ ; do
          if [ -d "$d2" ]; then
            cd $d2
            count=`ls -1 *.html 2>/dev/null | wc -l`
            if [ $count != 0 ]; then
              sed -i -- 's*<base href="/~max.isi/summary/" />*<base href="../../../.." />*g' *.html
            fi
            cd ${RUN_DIRECTORY}/day/$d0/$d1
          fi
        done
        cd ${RUN_DIRECTORY}/day/$d0
      fi
    done
    cd ${RUN_DIRECTORY}/day/
  fi
done
 
######################################################################################
# Perform sync

rsync --exclude archive/ -r ${RUN_DIRECTORY}/day/${TODAY}/ controls@nodus.ligo.caltech.edu:${NODUSWEB}/day/${TODAY}

rsync --exclude archive/ -r ${RUN_DIRECTORY}/day/${YESTERDAY}/ controls@nodus.ligo.caltech.edu:${NODUSWEB}/day/${YESTERDAY} 

{
  LOGDIR=/usr1/max.isi/summary/pushnodus-log
  NOW=$(lalapps_tconvert now)
  echo "Last push to nodus: $NOW" > $LOGDIR
}

